        },
        {
          "type": "test-button",
          "text": "Try Solution >>",
          "code": "name = \"Camilo\"\nage = 30\n\nprint(\"Hello \" + name + \", you are \" + str(age) + \" years old.\")\n# or using commas\nprint(\"Hello\", name + \", you are\", age, \"years old.\")"
        }
      ]
    },
    {
      "type": "subtitle1",
